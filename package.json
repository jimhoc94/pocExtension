{
  "name": "injector-extension",
  "displayName": "Injector",
  "description": "VSCode extension with Vue.js webview for injection functionality",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:injector.openWebview"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "injector.openWebview",
        "title": "Open Injector"
      }
    ],
    "configuration": {
      "title": "Injector",
      "properties": {
        "injector.configurations": {
          "type": "array",
          "default": [],
          "description": "CICS/IMS injection configurations",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Configuration name"
              },
              "type": {
                "type": "string",
                "enum": ["CICS", "IMS"],
                "description": "Configuration type"
              },
              "commAreaIn": {
                "type": "string",
                "description": "Input communication area"
              },
              "commAreaOut": {
                "type": "string",
                "description": "Output communication area"
              },
              "transactionName": {
                "type": "string",
                "description": "Transaction name"
              },
              "saveLocation": {
                "type": "string",
                "enum": ["workspace", "user"],
                "description": "Where to save this configuration"
              },
              "cicsRegion": {
                "type": "string",
                "description": "CICS region name (CICS only)"
              },
              "programName": {
                "type": "string",
                "description": "Program name (CICS only)"
              },
              "commAreaLength": {
                "type": "number",
                "description": "Communication area length (CICS only)"
              },
              "imsRegionName": {
                "type": "string",
                "description": "IMS region name (IMS only)"
              },
              "messageType": {
                "type": "string",
                "description": "Message type (IMS only)"
              },
              "testWithAnswer": {
                "type": "boolean",
                "description": "Test with answer (IMS only)"
              }
            },
            "required": ["name", "type"]
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "build-webview": "cd webview && npm run build"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  }
}